{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GRID Policy Schema",
  "type": "object",
  "required": [
    "id",
    "name",
    "status",
    "type",
    "rules"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique policy identifier"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the policy"
    },
    "status": {
      "type": "string",
      "enum": ["active", "draft", "deprecated"],
      "description": "Policy status"
    },
    "type": {
      "type": "string",
      "enum": ["authorization", "validation", "transformation"],
      "description": "Policy type"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["effect"],
        "properties": {
          "principals": {
            "type": "array",
            "items": {"type": "string"}
          },
          "resources": {
            "type": "array",
            "items": {"type": "string"}
          },
          "actions": {
            "type": "array",
            "items": {"type": "string"}
          },
          "conditions": {
            "type": "array",
            "items": {"type": "string"}
          },
          "effect": {
            "type": "string",
            "enum": ["allow", "deny"]
          }
        }
      }
    }
  }
}